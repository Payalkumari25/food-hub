<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout tools:context=".Fragment.ProfileFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <RelativeLayout
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:background="#5CC09F"
                android:id="@+id/layoutHead">

            <ImageView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:background="@drawable/ic_person"
                android:id="@+id/img_view"
                android:layout_centerInParent="true"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:id="@+id/et_name"
                android:enabled="true"
                tools:text="Payal"
                android:layout_below="@id/img_view"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:hint="Enter Name"
                android:gravity="center_horizontal" />

            <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/progressbar_pic"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="360dp"
            android:layout_below="@id/layoutHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/txt_email"
                tools:text="786payalkuamri@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="16dp"
                android:layout_gravity="top"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/txt_not_verified"
                android:text="Not Verified (Click to Verify)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/txt_phone"
                android:enabled="true"
                tools:text="9097233005"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:layout_gravity="top"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/txt_password"
                android:enabled="true"
                android:text="@string/change_password"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:layout_gravity="top"
                android:layout_marginBottom="20dp"/>

            <ProgressBar
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/progressbar"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:background="?colorPrimary"
                android:id="@+id/btn_save"
                android:text="@string/save_changes"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"/>

         </LinearLayout>

        </RelativeLayout>

</FrameLayout>